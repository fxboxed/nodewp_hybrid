* 
    box-sizing border-box
    padding 0
    margin 0

body
    font-family Helvetica, sans-serif
    background alpha + 20%
    min-height 100vh
    position relative
.global-wrap 
    height 100%
    border 3px solid alpha + 20%
    max-width global-width
    margin 0rem auto
    width 100%
    position relative
img 
    //max-width 100%
    height auto
    object-fit: cover
    object-position: center
a  
    text-decoration none
    color alpha + 90%
    font-size clamp(1rem, 2vw, 1.2rem)
h1, h2, h3, h4, h5, h6, p  
    color alpha +90%

h1
    font-size clamp(1.5rem, 3vw, 2rem)
    font-weight bold
    color light
    //padding 0 1rem 1rem
    text-transform: uppercase
    //text-align center
h3  
    font-size clamp(1.2rem, 2vw, 2rem)
    font-weight bold
    color light
    //margin .4rem auto .6rem
    padding 0 1rem
    text-align center
    width fit-content

p   
    font-size clamp(1rem, 2vw, 1.3rem)
    line-height 1.5

    
.error 
    padding 1rem 
    display flex
    flex-direction column
    align-items center  
