footer.site-footer
    background: alpha + 15%
    min-width: 100%
    //height 4rem
    padding 1rem
    color alpha + 80%

    width 100%
    padding-bottom 1rem
    p   
        margin auto
        text-align center
    a   
        color alpha +90%
        font-size clamp(1rem, 2vw, 1.2rem)
        padding .2rem
        text-decoration none
        display flex
        align-items center
        justify-content left

.footer-nav-one 
    a  
        font-size 1rem
        margin 0
        height fit-content
    ul 
        display flex
        justify-content left
        gap 1rem
        list-style none
        margin 0 auto
        height 100%
        width 100%
        padding .4rem

.footer-grid
    max-width global-width
    display grid
    grid-template-columns repeat(auto-fit, minmax(300px, 1fr))
    align-items start
    justify-content: center
    gap .4rem
    width 100%
    padding .4rem
    margin 0 auto 1rem
.footer-item-wrap
    background alpha +20%

    height: 300px;
    overflow-x: hidden;
    overflow-y: auto;
    text-align: center;
.footer-categories, .footer-tags

ul.ct-grid  
    color alpha 
    display grid
    grid-template-columns 1fr 1fr
    align-items start
    list-style none
    padding .4rem
    margin 0
    height fit-content //100%
    width 100%
.required 
    display grid 
    grid-template-columns: 1fr 1fr
    align-items start
    justify-content: center
    gap .4rem
    width 100%
    padding .4rem
    margin 0 auto 1rem
