header 
    height 48px
    background alpha + 10%
    display flex
    align-items center
    position relative

nav.header-nav 
    //background blue
    display flex
    justify-content space-between
    align-items center
    width 100%
    padding 0 1rem
    position relative
 


    a
        color alpha + 90%
        text-decoration none
        padding .6rem .8rem
        border-radius .2rem
        &:hover
            background alpha + 30%
ul.header-nav-ul 
    list-style none
    display flex
    li 
        margin-right 1rem
        position relative
        display flex
        align-items center
        justify-content: center
        a
            color alpha + 90%
            text-decoration none
            &:hover
                color alpha + 70%
        &:last-child
            margin-right 0  
    //background orange