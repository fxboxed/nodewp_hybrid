nav.pagination 
  text-align center


  margin 2rem auto
  //position absolute
  bottom 10rem
  left 0
  //max-width 400px
  //min-width 400px
  border 1px solid alpha + 30%
  width fit-content // 100%
  ul 

    list-style none
    display flex
    gap 0.7rem
    justify-content center
    align-items center
  li   
    background alpha + 30%
    height 2.5rem
    display: flex
    align-items center
    justify-content center
    min-width 2.5rem
  .next-page
    background alpha + 30%
    display: flex
    align-items: center
    justify-content: center
    height 2.5rem
    width 2.5rem
    user-select: none
  span.dummy-span
    background pink
  li
    //background pink 
    color alpha + 50%
  a
    background: alpha + 30%
    padding .4rem .8rem
    border-radius 3px
    //alpha + 25%
    color alpha + 90%
    text-decoration none
    width 100%

    &:hover
      background alpha + 30%

  .active, .current
    background red //alpha + 50% // #333
    border-radius 3px
    color alpha + 90%
    padding 0.5rem 0.6rem//1rem
    font-size 1.2rem
    opacity .4

  li.ellipsis 
    display: inline-block
    padding: 0 6px 8px
    color: alpha + 90%
    pointer-events: none
    font-weight: bold
    font-size: 2.2rem
  span.curr 
    display none